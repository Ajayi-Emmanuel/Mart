<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PRODUCT</title>
    <style>
        *{
            padding: 0;
            margin: 0;
        }
        .navbar{
            border-bottom: 1px solid rgb(58, 56, 56);
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            padding: 15px;
        }
        .navbar > a{
            color: black;
            text-decoration: none;
            font-size: 18px;
        }
        .navbar > h2 > a{
            color: black;
            text-decoration: none;
            
        }

        main{
            position: absolute;
        }
        .main{
            margin-top: 5px;
            display: flex;
            flex-direction: row;
            
        }
        .image-section{
            border: 1px solid rgb(236, 226, 226);
            height: 400px;
            width: 65%;
        }
        .product-details{
            height: 400px;
            width: 35%;
            padding: 5px;
        }
        .product-details > h1{
            margin-left: 15px;
        }
        .description{
            padding: 5px;
            font-size: 16px;
        }
        .comment-section{
            border: 1px solid rgb(226, 217, 217);
            width: 62%;
            padding: 10px;
        }
        .comments{
            overflow-y: scroll;
            height: max-content;
            margin: 10px 0;
        }
        textarea{
            border-radius: 5px;
            font-size: 15px;
            padding: 10px;
        }
        .comment{   
            padding: 20px;
            width: 80%;
            background-color: rgb(238, 239, 240);
            margin: 10px 0;
            border-radius: 10px;

        }
        .time{
            font-size: 10px;
            margin-top: 4px;
        }
        .user{
            float: right;
            font-size: 12px;
            font-style: italic;
        }
        .submit{
            padding: 10px;
            width: 100px;
            background-color: rgb(239, 98, 47);
            border-radius: 5px;
            margin: 10px auto;
        }
        .submit > a{
            text-decoration: none;
            font-size: 18px;
            color: white;
        }
        button{
            padding: 5px;
            color: black;
            background-color: rgb(142, 213, 142);
            font-size: 18px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            width: 100px;
        }

        .modal-container{
            position: relative;
            background-color: rgb(238, 235, 235);
            border-radius: 10px;
            width: 30%;
            margin: 60px auto;
            display: none;
            padding: 10px;
        }
        .exit{
            float: right;
            color: red;
            text-decoration: none;
        }
        .products{
            margin-top: 20px;
        }
        .product{
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            border-bottom: 1px solid rgb(219, 216, 216);
            padding: 15px;
            height: 50px;
            margin-top: 10px;
            border-radius: 10px;
        }
        .del{
            background-color: rgb(245, 80, 80);
            padding: 5px;
            /* width: 10%; */
            border-radius: 5px;
        }
        .product > a{
            text-decoration: none;
            color: white;
        }
        .edit{
            border: 1px solid black;
            display: flex;
            flex-direction: row;
            justify-content: space-evenly;
            width: 10%;
            background-color: rgb(245, 80, 80);
        }
        .checkout > button{
            padding: 5px;
            border-radius: 5px;
            border: none;
            background-color: rgb(116, 219, 116);
            cursor: pointer;
            margin-top: 10px;
            font-size: 16px;
        }
        @media (max-width: 750px) {
            main{
                max-width: 100%;
            }
            .main{
                display: initial;
                position: initial;
            }
            .image-section{
                height: 300px;
                width: 99%;
                max-width: 100%;
                max-width: 100%;
            }
            .product-details{
                width: 95%;
                max-width: 100%;
                height: max-content;
                padding: 5px;
            }
            .product-details > h1{
                margin-left: 15px;
            }
            .description{
                padding: 5px;
                font-size: 16px;
            }
            .comment-section{
                border: 1px solid rgb(226, 217, 217);
                width: 95%;
                max-width: 100%;
            }
            .comments{
                height: max-content;
            }
            textarea{
                
                font-size: 13px;
                width: 90%;
                margin: 0 auto;
            }
            .comment{
                font-size: 13px;

            }
            .time{
                font-size: 8px;
            }
            .user{
                font-size: 10px;
            }
            button{
                padding: 5px;
                color: black;
                background-color: rgb(142, 213, 142);
                font-size: 18px;
                border-radius: 5px;
                border: none;
                cursor: pointer;
                width: 100px;
                margin-bottom: 20px;
            }
        }
       
    </style>
</head>
<body>  
    <div id="container">
        <div class="navbar">
            <h2><a href="/product/allProducts">MART</a></h2>
            <a href="#modal-container" onclick="showModal()">My Cart</a>
            <p>Hello <%=username%></p>
        </div>

        <main>

            <div class="main">
                <div class="image-section">

                </div>
                <div class="product-details">
                    <h1><%= product.productName %></h1>
                    
                    <div class="description">
                        <h4>Product Description</h4>
                        <p><%= product.productDescription %></p>
                        
                        
                        <div class="price">
                            <h4>Product Price</h4>
                            <p>Price: <%= product.productPrice %></p>
                        </div>
                       <div class="quantity">
                            <h4>Product Quantity</h4>
                            <p>Quantity currently Available: <%= product.quantity %></p>
                       </div>
                    </div>

                    <div class="submit">
                        <a href="/cart/<%=product.id%>">Add To Cart</a>
                    </div>
                </div>
            </div>
            
            
            <section>
                <div class="comment-section" id="comment-section">
                    <h1>Reviews</h1>
                    <div class="comments">
                        <% if(isComment){ %>
                            <% comments.forEach(comment => {  %>
                                <div class="comment">
                                    <p><%= comment.productReview %></p>
                                    <p class="time"><%= comment.TimeStamp.createdAt %></p>
                                    <p class="user">@<%= comment.user.username%> </p>
                                </div>
                            <% }) %>
                        <% } %>
                    </div>

                    <form action="/product/review/<%=product.id%>" method="post" class="comment-form">
                        <textarea name="review" id="" cols="60" rows="10"></textarea>
                        <div class="btn">
                            <button type="submit">submit</button>
                        </div>
                    </form>
                </div>
                
            </section>
        </main>

        <div class="modal-container" id="modal-container">
            <div class="cart-header">
                <a href="" onclick="hideModal()" class="exit">X</a>
            </div>
            <div class="products">
                <% cartProducts.forEach(cartProduct => {  %>
                        <div class="product">
                            <div class="details">
                                <p>Name: <%= cartProduct.product.productName %></p>
                                <p>Price: <%= cartProduct.product.productPrice %></p>
                                <p>Quantity: <%= cartProduct.quantity %></p>
                            </div>
                            <!-- <div class="edit">
                                <a href="/cart/increment/<%=cartProduct._id%>" >+</a>
                                <p>1</p>
                                <a href="/cart/decrement/<%=cartProduct._id%>">-</a>
                             </div> -->
                            <a href="/cart/delete/<%=cartProduct.product._id%>">
                                <div class="del">
                                    Delete
                                </div>
                            </a>
                        </div>
                <% }) %>
                
            </div>

            <div class="checkout">
                <button type="submit">Check Out</button>
            </div>
           
        </div>

        
    </div>
    <script>
        function hideModal(){
            var modalContainer = document.getElementsByClassName("modal-container")[0];
            modalContainer.style.display = "none";
        }
        function showModal(){
            var modalContainer = document.getElementsByClassName("modal-container")[0];
            modalContainer.style.display = "block";
        }
    </script>
</body>
</html>